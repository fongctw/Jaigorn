# === Django core ===
# Your Django secret key (long random string; never use "change-me" in production)
DJANGO_SECRET_KEY="change-me"

# Debug mode (True for development, False for production)
DJANGO_DEBUG="True"

# Comma-separated list of allowed domains/IPs
# e.g., localhost,127.0.0.1,api.example.com
DJANGO_ALLOWED_HOSTS="localhost,127.0.0.1"

# === Database (PostgreSQL/RDS) ===
# Database name in your PostgreSQL/RDS instance
DB_NAME="your-db-name"

# Database username (use a dedicated app user in production)
DB_USER="your-db-username"

# Password for the database user
DB_PASSWORD="your-db-password"

# Database host (IP or EIP of your RDS/DB server)
# e.g., 107.x.x.x or rds-xxx.huaweicloud.com
DB_HOST="eip-or-rds-endpoint"

# Database port (PostgreSQL default is 5432; use what your server uses)
DB_PORT="5432"

# SSL mode for the DB connection:
# disable | allow | prefer | require | verify-ca | verify-full
DB_SSLMODE="require"

# Absolute path to the CA .pem used to validate the DB server certificate
DB_SSLROOTCERT="/absolute/patuaweicloud-rds-ca.pem"
